        android:paddingLeft="@dimen/_45sdp"
        android:paddingRight="@dimen/_45sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@drawable/chip_background"
