<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.acceedo.attendancesystem.adapter.AdapterRecentTimesheet" />
       </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvDate"
                style="@style/text_secondaryregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvTags"
                android:text="@string/time_sheet"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/PrimarytextColor" />

            <TextView
                android:id="@+id/tvTags"
                style="@style/text_secondaryregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivRightArrw"
                android:text="@string/time_sheet"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/ivRightArrw"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/vvBottomline"
            android:layout_width="match_parent"
            android:layout_height="0.55dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/stokecolor" />
    </LinearLayout>
</layout>
